# Platform dependent settings to Makefile

# C/C++ compiler and flags
CC = gcc
OPT = -O1 #-O3 -pipe -fomit-frame-pointer
DEF = -D$(ARCH) -mmacosx-version-min=10.10
DEBUG = -g
WARN = -Wall
PIC = -fPIC

# GNU Prolog compiler
GPLC = gplc

# SWI-Prolog compiler
SWIPL = swipl

# linker for object files
LINK = gcc

# static library
AR = ar
ARFLAGS = -ruv
RANLIB = ranlib

# SWI-Prolog: include path and library settings
# add other include paths here, i.e. -I/usr/local/include
SWI_ARCH_INC = -I${HOME}/lib/swipl-7.7.16/include/ -I${HOME}/lib/include

# add other linker flags here, i.e. -L/usr/local/lib
SWI_ARCH_LDFLAGS = -L${HOME}/lib/swipl-7.7.16/lib/x86_64-darwin17.5.0/ -shared

# add other libraries here, i.e. -liostream
SWI_ARCH_LIBS = -lswipl

# GNU Prolog: include path and library settings
GP_ARCH_INC = 
GP_ARCH_LDFLAGS =
GP_ARCH_LIBS =

